.body{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  font-size: 55rpx;
  margin-top: 180rpx;
  margin-bottom: 60rpx;
}
.rank-list{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.rank{
  width: 80%;
  border: 1rpx solid #000;
  border-radius: 25rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.rank-top{
  display: flex;
  align-items: center;
}
.rank-bottom{
  text-align: right;
  margin-top: 15rpx;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.nickname{
  margin-left: 10rpx;
  max-width: 200rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.num{
  margin-left: auto;
}